{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"target": "es2021",
		"lib": [
			"ES2021",
			"DOM",
			"DOM.Iterable"
		],
		"declaration": false,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": false,
		"noPropertyAccessFromIndexSignature": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": [
		"src",
		"test",
		"build",
		"webpack.config.ts"
	]
}
