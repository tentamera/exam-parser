{
  "manifest_version": 2,
  "name": "exam-parser",
  "version": "1.0",
  "description": "Parse exams :)",
	"permissions": [
		"activeTab",
		"https://ortrac.com/*"
	],
	"optional_permissions": [
		"*://*/*"
	],
	"icons": {
    "128": "icon.svg",
    "48": "icon.svg",
    "32": "icon.svg",
    "16": "icon.svg"
  },
	"browser_action": {
    "default_icon": "icon.svg",
    "default_title": "Exam Parser"
  },
	"background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "exam-parser@tentamera.se"
    }
  }
}
